<div>
    <label for="">Title</label>
    <input type="text" name="title" id="" value="<%= book.title %>">
</div>
<div>
    <label for="">Author</label>
    <select name="author">
        <% authors.forEach(author=> { %>
            <% if (author.id===book.author) { %>
                <option selected label="<%= author.name %>" value="<%= author.id %>"></option>
                <% } else { %>
                    <option label="<%= author.name %>" value="<%= author.id %>"></option>
                    <% } %>
                        <% }); %>
    </select>
</div>
<div>
    <label>publish Date</label>
    <input type="date" name="publishDate"
        value="<%= book.publishDate==null?'':book.publishDate.toISOString().split('T')[0] %>">
</div>
<div>
    <label>Page Count</label>
    <input type="number" name="pageCount" min="2" value="<%= book.pageCount%>">
</div>
<div>
    <label for="category">category</label>
    <select name="category">
        <option value="fantasy">Fantasy</option>
        <option value="scienceFiction">Science Fiction</option>
        <option value="thriller">Thriller</option>
        <option value="other">Other</option>
    </select>
</div>
<div>
    <label>Cover</label>
    <input type="file" name="cover" class="filepond">
</div>
<div>
    <label>Description</label>
    <textarea name="description" value="<%= book.description %>"></textarea>
</div>