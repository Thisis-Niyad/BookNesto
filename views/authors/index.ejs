<h2>search Authors</h2>
<form action="/authors" method="get">
    <label for="">Name</label>
    <input type="text" name="name" value="<%= searchOptions.name %>">
    <button class="sub-btn" type="submit">Search</button>
</form>
<br>
<% authors.forEach(author=> { %>
    <div>
        <%= author.name %>
    </div>
    <a href="/authors/<%= author.id %>" class="green-btn">view</a>
    <a href="/authors/<%= author.id %>/edit" class="edit-btn">Edit</a>
    <%- include('../partials/deleteForm' , {url:`/authors/${author.id }`}) %>

        <% }); %>